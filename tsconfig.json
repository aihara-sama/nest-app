{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es5",
		"lib": ["es5", "es6", "es2017", "dom", "dom.iterable", "esnext"],
		"downlevelIteration": true,
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"types": ["node", "jest", "@testing-library/jest-dom"],
		"paths": {
			"@/components/*": ["components/*"],
			"@/pages/*": ["pages/*"],
			"@/styles/*": ["styles/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"jest.setup.ts",
		"jest.config.ts"
	],
	"exclude": ["node_modules", "cypress"]
}
